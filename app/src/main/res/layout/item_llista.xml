<?xml version="1.0" encoding="utf-8"?>
<!-- Disseny de cada fila de la llista -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <!-- Posem la imatge i el text un al costat de l'altre -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp"
        android:gravity="center_vertical">

        <!-- Imatge rectangular tipus poster amb centerCrop -->
        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:contentDescription="@string/imatge_item_desc"
            android:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- El nom de l'item ocupa tot l'espai que sobra -->
        <TextView
            android:id="@+id/textViewNom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Baldur's Gate 3" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
